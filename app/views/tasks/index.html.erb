<h1>Tasks manager</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" onclick="return false;" id="<%= task.title %>" <%= "checked" if task.completed %>>
      <label for="<%= task.title %>"><%= link_to task.title, task_path(task) %> <%= link_to "Delete", delete_path(task), method: :delete %></label>
    </li>
  <% end %>
</ul>

<%= link_to "Create a new task", tasks_new_path %>
